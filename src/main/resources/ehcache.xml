<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache alias="childInfoCache">
        <key-type>java.lang.Long</key-type>
        <value-type>de.floschi.wagawindemo.family.data.response.ChildInfoResponse</value-type>
        <expiry>
            <ttl>60</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>de.floschi.wagawindemo.family.util.ChildInfoCacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>
    <cache alias="houseCache">
        <key-type>java.lang.Long</key-type>
        <value-type>de.floschi.wagawindemo.family.data.response.HouseResponse</value-type>
        <expiry>
            <ttl>60</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>de.floschi.wagawindemo.family.util.HouseCacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <offheap unit="MB">300</offheap>
        </resources>
    </cache>

    <cache alias="parentSummaryCache">

        <value-type>de.floschi.wagawindemo.family.data.response.ParentSummaryResponse</value-type>
        <expiry>
            <ttl>600</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>de.floschi.wagawindemo.family.util.ParentSummaryCacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

</config>